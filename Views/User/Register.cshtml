
@{
    ViewData["Title"] = "Регистрация нового пользователя.";
}

<div class="card-body">
    <div>
        <h3 style="text-align: left">Регистрация пользователя!</h3>
        <br>
        <form method="post" action="/User/Register">
            <table>
                
                <tr>
                    <td>Имя:</td>
                    <td><input type="text" name="name" class="form-control"/> </td>
                </tr>
                <tr>
                    <td>Фамилия:</td>
                    <td><input type="text" name="lastName" class="form-control"/></td>
                </tr>
                <tr>
                    <td>Возраст:</td>
                    <td><input type="number" name="age" class="form-control"/></td>
                </tr>
                <tr>
                    <td>Логин:</td>
                    <td><input type="text" name="login" class="form-control" /></td>
                </tr>
                <tr>
                    <td>Пароль:</td>
                    <td><input type="text" name="password" class="form-control" /></td>
                </tr>
            </table>
            <br>
            <button class="btn btn-primary" type="submit">Register</button>
        </form>
    </div>
</div>



